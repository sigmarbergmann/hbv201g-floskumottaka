<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_LEFT" prefHeight="420.0" prefWidth="625.0" spacing="20.0" stylesheets="@css/floskur.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vidmot.floskumottaka.KvedjaController">

    <children>

        <!-- Efsti hluti: mynd og kveðjutexti í HBox -->
        <HBox alignment="CENTER_LEFT" prefHeight="342.0" prefWidth="625.0" spacing="20">
            <children>

                <!-- Flöskumynd vinstra megin -->
                <ImageView fitHeight="296.0" fitWidth="193.0" preserveRatio="true">
                    <image>
                        <Image url="@css/myndir/flaska2.png" />
                    </image>
                    <HBox.margin>
                        <Insets left="70.0" top="50.0" />
                    </HBox.margin>
                </ImageView>

                <!-- Kveðjutexti hægra megin -->
                <Label fx:id="fxKvedjaText" prefHeight="257.0" prefWidth="287.0" text="Við þökkum fyrir heimsóknina! Sjáumst vonandi fljótlega aftur!" wrapText="true" />

            </children>
        </HBox>

        <!-- Hnappar neðst -->
        <ButtonBar prefWidth="435.0" styleClass="button-bar">
            <buttons>
                <Button fx:id="KvedjaTakki" onAction="#fxKvedjaTakki" text="Hætta" />
            </buttons>
        </ButtonBar>

    </children>
</VBox>
